{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-underscore-dangle": "off",
    "camelcase": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "class-methods-use-this": "off",
    "import/order": "off",
    "prefer-const": "off",
    "no-return-assign": "off",
    "no-restricted-syntax": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "lf",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  }
}